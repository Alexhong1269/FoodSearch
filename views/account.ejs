<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Foogle - My Recipes</title>
</head>
<body>
	<%- include('partials/navigation') %>
	
	<!-- Show the user's recipes -->
	<h1>Hi, <%= username %>!</h1>
	<% if (recipes.length > 0) { %>
		<h2>Here are your recipes:</h2>
		<ul>
			<% recipes.forEach(recipe => { %>
				<li>
					<a href="/recipe/<%= recipe.RecipeID %>"><%= recipe.Title %></a>
					<a href="/build-recipe?recipeId=<%= recipe.RecipeID %>">Edit</a>
					<button onclick="deleteRecipe('<%= recipe.RecipeID %>')">Delete</button>
				</li>
			<% }); %>
		</ul>
	<% } else { %>
		<h2>You don't have any recipes yet.</h2>
	<% } %>
	<a href="/build-recipe">Add Recipe</a>
	
	<script>
		function deleteRecipe(recipeId) {
			if (confirm('Are you sure you want to delete this recipe?')) {
				fetch('/delete-recipe/' + recipeId, { method: 'POST' })
					.then(res => window.location.reload())
					.catch(err => console.error('Error deleting recipe:', err));
			}
		}
	</script>
</body>
</html>